{
  "name": "memesrc",
  "productName": "memeSRC",
  "version": "2.0.0",
  "description": "memeSRC Desktop",
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=dev electron .",
    "start-prod": "electron .",
    "prepackage": "node prebuild.js",
    "package-mac-arm": "npm run prepackage && electron-packager . --overwrite --platform=darwin --arch=arm64 --icon=icon.icns --prune=true --out=release-builds --extra-resource=pythonPath.json",
    "package-mac-intel": "npm run prepackage && electron-packager . --overwrite --platform=darwin --arch=x64 --icon=icon.icns --prune=true --out=release-builds --extra-resource=pythonPath.json",
    "package-win": "npm run prepackage && electron-packager . --overwrite --platform=win32 --arch=x64 --icon=icon.ico --prune=true --out=release-builds"
  },
  "author": "Vibe House LLC",
  "license": "MIT",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "archiver": "^6.0.2",
    "electron-window-state": "^5.0.3",
    "ffmpeg-static": "^5.2.0",
    "kubo": "^0.26.0",
    "python-shell": "^5.0.0"
  }
}
